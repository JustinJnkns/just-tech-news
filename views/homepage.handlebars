<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_url}}" target="_blank">{{title}}</a>
                <span>({{post_url}})</span>
            </div>
            <div class="meta">
            {{vote_count}} points(s) by {{user.name}} on
            {{created_at}}
            |
            <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
        </article>
    </li>
    {{/each}}
</ol>